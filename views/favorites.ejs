<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Favorites</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"> <!-- Font Awesome -->
    <link href="https://fonts.googleapis.com/css2?family=Rubik+80s+Fade&display=swap" rel="stylesheet"> <!-- Google Font -->
    <style>
        body {
            background-color: #1C3A3E;
            color: #F0EADE;
            font-family: 'Rubik 80s Fade', cursive;
            margin: 0;
            padding: 0;
            overflow: auto; 
        }

        .navbar {
            background-color: #4F1025;
            padding: 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-family: 'Permanent Marker', cursive;
        }

        .navbar a {
            color: #FCCC13;
            text-decoration: none;
            margin: 0 15px;
            font-size: 1.5rem; 
            transition: color 0.3s ease, transform 0.3s ease;
        }

        .navbar a:hover {
            color: #f4c273;
        }

        .container {
            margin-top: 60px; /* Adjust for fixed navbar */
            padding: 20px;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .favorites-list {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            flex: 1;
        }

        .card {
            background-color: rgba(255, 255, 255, 0.9);
            border: none;
            border-radius: 10px;
            margin: 15px;
            padding: 20px;
            width: 250px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            text-align: left;
            transition: transform 0.2s, box-shadow 0.2s;
            position: relative;
        }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        }

        .card h3 {
            font-size: 1em;
            color: #333;
            margin-bottom: 10px;
            font-family: 'Rubik 80s Fade', cursive;
        }

        .card p {
            font-size: 0.8em;
            color: #666;
            margin-bottom: 10px;
            font-family: 'Rubik 80s Fade', cursive;
        }

        .card img {
            width: 100%;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        .delete-button {
            background: none;
            border: none;
            font-size: 1.2rem;
            cursor: pointer;
            color: #f44336;
        }

        .delete-button:hover {
            color: #d32f2f;
        }

        .navbar ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
            overflow: hidden;
            background-color: #4F1025;
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1000;
        }

        .navbar ul li {
            float: left;
        }

        .navbar ul li a {
            display: block;
            color: #FCCC13;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

        .navbar ul li a:hover {
            background-color: #960E1A;
        }
    </style>
</head>
<body>
    <div class="navbar">
        <a href="/" style="color: #FCCC13; text-decoration: none;">
            <h1 style="color: inherit;">Retro Movie Merchandise</h1>
        </a>
        <ul>
            <li><a href="/products">Products</a></li>
            <% if (user) { %>
                <li><a href="/favorites">Favorites</a></li>
                <li><a href="/baskets">Basket</a></li>
                <li><a href="/users/profile">Profile</a></li>
                <li><a href="/users/logout">Logout</a></li>
                <% if (user.username === 'admin') { %>
                    <li><a href="/admin">Admin</a></li>
                    <li><a href="/users">Users</a></li>
                <% } %>
            <% } else { %>
                <li><a href="/users/login">Login</a></li>
                <li><a href="/users/register">Register</a></li>
            <% } %>
        </ul>
    </div>
    <div class="container">
        <h1>Favorites</h1>
        <div class="favorites-list">
            <% favorites.forEach(favorite => { %>
                <div class="card" id="favorite-item-<%= favorite.favoriteId %>">
                    <h3><%= favorite.name %></h3>
                    <p>Description: <%= favorite.description %></p>
                    <p>Stock: <%= favorite.stock %></p>
                    <p>Category: <%= favorite.category %></p>
                    <p>Price: $<%= favorite.price %></p>
                    <img src="<%= favorite.imageUrl %>" alt="<%= favorite.name %> Image">
                    <form onsubmit="event.preventDefault(); addToBasket('<%= favorite.favoriteId %>', document.getElementById('quantity-<%= favorite.favoriteId %>').value);">
                        <input type="number" id="quantity-<%= favorite.favoriteId %>" name="quantity" value="1" min="1" required>
                        <button type="submit" class="basket-button"><i class="fas fa-shopping-basket"></i></button>
                        <button type="button" class="delete-button" onclick="removeFromFavorite('<%= favorite.favoriteId %>')"><i class="fas fa-trash-alt"></i></button>
                    </form>
                </div>
            <% }) %>
        </div>
        

        <script>
        function addToBasket(favoriteId, quantity) {
        fetch(`/baskets`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ favoriteId, quantity }),
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Item added to basket');
            } else {
                alert('Failed to add item to basket');
            }
        })
        .catch(error => console.error('Error:', error));
    }


            function removeFromFavorite(id) {
                fetch(`/favorites/${id}`, {
                    method: 'DELETE'
                })
                .then(response => {
                    if (response.ok) {
                        document.getElementById(`favorite-item-${id}`).remove();
                    } else {
                        alert('Failed to remove item from favorites');
                    }
                })
                .catch(error => console.error('Error:', error));
            }
        </script>
        
</html>
